[flake8]
max-line-length = 120
ignore = W293,W391,E402,E722,E251,E128,E129,E303,E305,W291,F541,E226,E501,F841,E302,W503,W504
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    alembic/versions,
    .tmp
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F841
    conftest.py:F401
    alembic/env.py:F401,E402
    api/routes/*:F401
    engines/*:F401
    tools/*:F401
    middleware/*:F401
    models/*:F401

